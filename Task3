<head>
  <meta charset="UTF-8">
  <title>Calculator</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: white;
      color: #4b0082;
      text-align: center;
      padding: 50px;
      margin: 0;
    }

    h1 {
      font-size: 2.5em;
      margin-bottom: 20px;
    }

    input {
      padding: 10px;
      margin: 10px;
      font-size: 1.2em;
      width: 220px;
      border: 2px solid #a364af;
      border-radius: 6px;
    }

    button {
      padding: 10px 18px;
      margin: 10px;
      font-size: 1em;
      background-color: #a364af;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.3s, transform 0.2s;
    }

    button:hover {
      background-color: #8b4c99;
      transform: scale(1.05);
    }

    #result {
      margin-top: 30px;
      font-size: 1.8em;
      opacity: 0;
      transform: translateY(10px);
      animation: fadeIn 0.5s forwards;
    }

    /* Fade-in animation */
    @keyframes fadeIn {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>
<body>

  <h1><b>Calculator</b></h1>

  <input type="number" id="num1" placeholder="Enter First Number"><br>
  <input type="number" id="num2" placeholder="Enter Second Number"><br>

  <button onclick="calculate('+')">+</button>
  <button onclick="calculate('-')">−</button>
  <button onclick="calculate('*')">×</button>
  <button onclick="calculate('/')">÷</button>

  <h2 id="result">Result:</h2>

  <script>
    function calculate(operator) {
      const n1 = parseFloat(document.getElementById("num1").value);
      const n2 = parseFloat(document.getElementById("num2").value);
      let resultText = "";

      if (isNaN(n1) || isNaN(n2)) {
        resultText = "Please enter valid numbers.";
      } else {
        switch (operator) {
          case '+': resultText = n1 + n2; break;
          case '-': resultText = n1 - n2; break;
          case '*': resultText = n1 * n2; break;
          case '/': resultText = n2 !== 0 ? (n1 / n2).toFixed(2) : "Cannot divide by 0"; break;
        }
      }

      const resultElement = document.getElementById("result");
      resultElement.innerText = "Result: " + resultText;

      // Restart animation
      resultElement.style.animation = "none";
      void resultElement.offsetWidth; // trigger reflow
      resultElement.style.animation = "fadeIn 0.5s forwards";
    }
  </script>

</body>
</html>

